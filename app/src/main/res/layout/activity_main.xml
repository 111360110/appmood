<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Display today's mood -->
    <TextView
        android:id="@+id/txt_today_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日心情：尚未記錄"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lottie Animation View -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/animation_file"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/txt_today_mood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Display diary content -->
    <TextView
        android:id="@+id/txt_today_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日日記：尚未記錄"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lottie_animation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Record mood button -->
    <Button
        android:id="@+id/btn_record_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="記錄情緒"
        app:layout_constraintTop_toBottomOf="@id/txt_today_diary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- View suggestions button -->
    <Button
        android:id="@+id/btn_suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看舒壓建議"
        app:layout_constraintTop_toBottomOf="@id/btn_record_mood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

    <!-- View chart button -->
    <Button
        android:id="@+id/btn_view_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看趨勢圖表"
        app:layout_constraintTop_toBottomOf="@id/btn_suggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_stop_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止動畫"
        app:layout_constraintTop_toBottomOf="@id/btn_view_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
